<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>fortnite</title>
    <script src="https://kit.fontawesome.com/5af6d749d4.js"></script>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <div class="home-btn-div">
        <button class="home-btn"><a href="/"<i class="fas fa-home hamburger"></a></i></button>
        <button class="ham-btn"><i class="fas fa-bars hamburger"></i></button>
      </div>  
      <div class="modal modal-login">
        <div class="modal-content">
          <div class="modal-body">
            <a href="/user/logout" class="log-out">Logout</a>
            <h2><a href="/user/<%=userID%>">Account</a></h2>
          </div>
        </div>
      </div>
      <h1>FORTNITE MANIA</h1>
    </header>
    <main>
      <div class="filter-div">
        <input type="text" name="search" placeholder="search for video">
      </div>
      <article class="show-art">
        <div>
          <h1><%=video.title%></h1>
          <iframe src="https://youtube.com/embed/<%=video.url%>"></iframe>
          <div class="info-div"> 
            <span><%=video.user%></i></span>
            <span><i class="fas fa-thumbs-up">:<%=video.likes.length%></i></span>
            <span><i class="fas fa-thumbs-down">:<%=video.dislikes.length%></i></span>
          </div>
        </div>
        <div class="show-comments">
            <form action="/video/<%=video._id%>/comments?_method=PUT" method="POST">
              <textarea type="text" max="150">
              </textarea>
              <div class="comment-btn-div">
                <button>Add comment</button>
              </div>
            </form>
            <button class="cancel-btn">Cancel</button>
            <ul>
              <%for(let i = 0; i < video.comments.length; i++) {%>
                <li><%=video.comments[i]%></li>
              <%}%>
            </ul>
        </div>
      </article>
      <aside class="vertical-scroll">
       <div class="scrollmenu">
            <%for(let i = 0; i < videos.length; i++) {%>
              <div class="vid-container">
                <div class="video-player"><iframe src="https://youtube.com/embed/<%=videos[i].url%>"></iframe></div>
                <div class="title-div"><a href="/video/<%=videos[i]._id%>"><%= videos[i].title %></a></div>
              </div>
            <%}%>
          </div>
      </aside>
    </main>
    <footer>
    </footer>
    <script src="/js/videoShow.js"></script>
  </body>
</html>

